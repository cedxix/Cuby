<!DOCTYPE html>
<html>
    <head>

        <meta charset="utf-8">
        {% set hostpath = '/cubbyhole/webclient' %}
        {% set api = 'http://localhost:8080/cubbyhole/API/' %}


        <title>{% block title %}{% endblock %} | CubbyHole</title>

        {% block stylesheets %}
            <link href="{{hostpath}}/css/bootstrap.css" type="text/css" rel="stylesheet" type="text/css" />   
            <link href="{{hostpath}}/css/icons.css" type="text/css" rel="stylesheet" type="text/css" />
            <link href="{{hostpath}}/css/bootstrap-editable.css" rel="stylesheet" type="text/css">

            <link href="{{hostpath}}/css/dz/dropzone.css" rel="stylesheet" type="text/css"/>                                                
        {% endblock %}


    </head>

    <body>
        {% block breadcrumb %}
        {% endblock %}
        {% block body %}
            <div id="footer" style="padding: 20px;">
                {% block footer %}
                    <hr/>
                    <div class="container">
                        &copy; Copyright 2011 by <a href="#">Cubbyhole</a>.
                    </div>
                {% endblock %}

            {% endblock %}
        </div>

        {% block js %}
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script src="{{hostpath}}/js/bootstrap.js"></script>            
            <script src="{{hostpath}}/js/functions.js"></script>
            {% block jsext %}{% endblock %}
        {% endblock %}



</body>
