{% block jsext %}
    <script src="{{hostpath}}/js/dz/dropzone.js" type="text/javascript"></script> 
    <script type="text/javascript">

        $(function() {
            //alert('yo');
            Dropzone.autoDiscover = false;            
            $("div#myDz").dropzone({
                url: "{{api_uri}}",
                paramName: "file",
                maxFilesize: 10 // MB    
            });            
        });
    </script> 
{% endblock %}